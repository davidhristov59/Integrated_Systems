@model EShopApplication.Web.Models.DTO.AddProductToShoppingCartDTO;

@{
    ViewData["Title"] = "Add to Shopping Cart";
    Layout = "_Layout"
;}

<h1>Add selected product to the shopping cart</h1>

<hr/>

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddProductToCart" method="post"> <!--za post povik-->
            
            <input type="hidden" asp-for="@Model.ProductID"/> <!--hidden pole za id-->
            
            <div class="form-group">
                <label asp-for="selectedProduct.ProductName"></label>
                <input disabled asp-for="selectedProduct.ProductName" class="form-group"/>
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-group"/>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
            
        </form>
    </div>
</div>